<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="10dp">
    <ImageView
        android:id="@+id/iv_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/right_arrow"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_childclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="17sp"
        android:textColor="#333333"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_childlesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_childclass"
        android:layout_marginLeft="5dp"
        android:textSize="17sp"
        android:textColor="#617FDE"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_childcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_childlesson"
        android:layout_toLeftOf="@id/iv_right_arrow"
        android:layout_marginLeft="5dp"
        android:textSize="17sp"
        android:textColor="#888888"
        android:layout_centerVertical="true"/>
</RelativeLayout>