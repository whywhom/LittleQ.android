<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_gap_bg">
    <littleq.mammoth.com.littleq.widget.MainTopTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
    </littleq.mammoth.com.littleq.widget.MainTopTitle>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_below="@id/title">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/transparent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/user_gap2_bg"/>

        <RelativeLayout
            android:id="@+id/rl_user_binding_weixin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/white" >
            <TextView
                android:id="@+id/tv_user_binding_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:text="@string/user_binding_weixin"/>

            <ImageView
                android:id="@+id/iv_user_bnding_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/off"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/user_gap2_bg"/>
        <RelativeLayout
            android:id="@+id/rl_user_binding_qq"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/white" >
            <TextView
                android:id="@+id/tv_user_binding_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:text="@string/user_binding_weixin"/>

            <ImageView
                android:id="@+id/iv_user_bnding_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/off"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/user_gap2_bg"/>
        <RelativeLayout
            android:id="@+id/rl_user_binding_weibo"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/white" >
            <TextView
                android:id="@+id/tv_user_binding_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:text="@string/user_binding_weibo"/>

            <ImageView
                android:id="@+id/iv_user_bnding_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/off"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/user_gap2_bg"/>
    </LinearLayout>
</RelativeLayout>
