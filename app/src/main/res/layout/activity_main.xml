<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.MainActivity">
    <LinearLayout
        android:id="@+id/apptoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/user_gap2_bg"/>

        <LinearLayout
            android:id="@+id/apptoolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_homework"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_bg"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_homework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/tab_zy_n"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_bg"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/tab_xzt_n"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_growup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_bg"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_growup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/tab_xzt_n"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_bg"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/tab_wo_n"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/apptoolbar" />
</RelativeLayout>
