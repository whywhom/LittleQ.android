<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FragmentUser">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/user_top_bg"
        android:layout_alignParentTop="true">

        <littleq.mammoth.com.littleq.widget.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/tupai_test_0"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/dark"
            android:layout_centerVertical="true" />


        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_img"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="王胖子"/>
            <TextView
                android:id="@+id/user_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/user_top_text_bg"
                android:textSize="12sp"
                android:text="一年级(1)班 班主任"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


</RelativeLayout>
